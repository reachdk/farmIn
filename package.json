{
  "name": "farm-attendance-system",
  "version": "1.0.0",
  "description": "Farm attendance tracking system with offline-first capabilities",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "ts-node src/__tests__/e2e/run-e2e-tests.ts",
    "test:e2e:employee": "jest src/__tests__/e2e/employee-journey.e2e.test.ts --verbose",
    "test:e2e:manager": "jest src/__tests__/e2e/manager-journey.e2e.test.ts --verbose",
    "test:e2e:admin": "jest src/__tests__/e2e/admin-journey.e2e.test.ts --verbose",
    "test:e2e:offline": "jest src/__tests__/e2e/offline-scenarios.e2e.test.ts --verbose",
    "test:e2e:performance": "jest src/__tests__/e2e/performance.e2e.test.ts --verbose",
    "test:e2e:sync": "jest src/__tests__/e2e/sync-scenarios.e2e.test.ts --verbose",
    "test:all": "npm run test && npm run test:e2e",
    "migrate": "ts-node src/database/migrate.ts"
  },
  "keywords": [
    "attendance",
    "farm",
    "offline",
    "tracking"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.9.0",
    "@types/sharp": "^0.31.1",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "bcryptjs": "^3.0.2",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "sharp": "^0.34.4",
    "sqlite3": "^5.1.6",
    "uuid": "^13.0.0"
  }
}
